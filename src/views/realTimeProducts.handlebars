
<div class="container">
    <h1>{{nombre}}</h1>
    <hr>
    <h2>products Disponibles</h2>
    <div id="products-container">
        <ul class="card-container">
            {{#each products}}
                <div class="card">
                    <div class="card-content">
                        <div>
                            <h5 class="card-title">{{this.nombre}}</h5>
                            <p class="card-text">Precio: ${{this.precio}}</p>
                            {{#if this.stock}}
                                <p class="card-text">Stock: {{this.stock}}</p>
                            {{else}}
                                <p class="card-text sin-stock">Sin Stock</p>
                            {{/if}}
                            <span class="card-badge">{{this.categoria}}</span>
                        </div>
                        <img src="{{this.imagen}}" alt="{{this.nombre}}">
                    </div>
                </div>
            {{/each}}
        </ul>
    </div>
    <div class="form-container">
        <h2>Agregar Nuevo Producto</h2>
        <form id="add-product-form">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" required>

            <label for="categoria">Categor√≠a:</label>
            <input type="text" id="categoria" name="categoria" required>

            <label for="precio">Precio:</label>
            <input type="number" id="precio" name="precio" required>

            <label for="stock">Stock:</label>
            <input type="number" id="stock" name="stock" required>

            <label for="imagen">URL de la Imagen:</label>
            <input type="text" id="imagen" name="imagen" required>

            <button type="submit">Agregar Producto</button>
        </form>
    </div>]

    <div class="form-container">
        <h2>Eliminar Producto</h2>
        <form id="delete-product-form">
            <label for="product-select">Selecciona un producto:</label>
            <select id="product-select" name="id" required>
                </select>
            <button type="submit">Eliminar Producto</button>
        </form>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/realTimeProducts.js"></script>
</div>